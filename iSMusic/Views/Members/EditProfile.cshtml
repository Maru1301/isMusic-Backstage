<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
<script>
    @if (Model.DateOfBirth.HasValue)
    {
        @:$("#DateOfBirth").val("@Model.DateOfBirth.Value.ToString()")
    }
else
    {
        @:$("#DateOfBirth").val("yyyy-MM-dd")
    }

</script>
}
