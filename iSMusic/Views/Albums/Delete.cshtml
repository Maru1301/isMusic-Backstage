@model iSMusic.Models.ViewModels.AlbumEditVM

@{
    ViewBag.Title = "Delete";
}

<h2>刪除專輯</h2>

<h3>確定要刪除這張專輯?</h3>
<div>
    <hr />
    <dl class="dl-horizontal p-4">
        <div class="row">
            <dt class="col-md-3">
                專輯名稱
            </dt>

            <dd class=" col-md-9">
                @Html.DisplayFor(model => model.albumName)
            </dd>
        </div>
        
        <div class="row">
            <dt class="col-md-3">
                主要表演者
            </dt>

            <dd class=" col-md-9">
                @Html.DisplayFor(model => model.ArtistName)
            </dd>
        </div>
        
        <div class="row">
            <dt class="col-md-3">
                發行時間
            </dt>

            <dd class="col-md-9">
                @Html.DisplayFor(model => model.released, "Date")
            </dd>
        </div>

    </dl>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            @Html.ActionLink("Back to List", "Index") |
            <input type="submit" value="刪除" class="btn btn-outline-dark" />
        </div>
    }
</div>


